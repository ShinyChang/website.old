<!DOCTYPE html>
<html>
  <head>
  	<meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta http-equiv="content-language" content="zh-tw">
  	<meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Shiny">
    <title><%= lib.siteName(title) %></title>
    <link rel='stylesheet' href='/stylesheets/bootstrap.min.css' />
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
  	<% include common/nav.ejs %>
    <div class='container'>
		<div class="page-header clearfix profile">
			<img src='https://graph.facebook.com/shinychang.tw/picture?type=normal' class="img-circle"/>
			<h1>Shiny Chang</h1>
		</div>
		<div class='row'>
			<div class='col-md-6'>
				<div class="panel panel-default experience">
				  	<div class="panel-heading"><%= lang.personalExperience %></div>
					<ul class="list-group">
						<% experiences.forEach(function(exp) { %>
						  	<li class="list-group-item">
							  	<span class="date pull-right"><%= exp.startDate %> ~ <%= exp.endDate %></span>
							  	<span class="job pull-right"><%= exp.job %></span>
							  	<a href='<%= exp.url %>' target="_blank"><%= exp.location %></a>
					  		</li>
				  		<% }); %>
					</ul>
				</div>
			</div>
		</div>
    </div>
    <% include common/footer.ejs %>
  </body>
</html>